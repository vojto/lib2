@import 'nib'

#messages
  width 100%
  bottom 0
  border-top 1px solid #fff
  margin-top 20px

  .list
    padding-left 20px

  .input
    padding 10px 15px
    box-sizing border-box
    input
      background #fff
      width 100%
      padding 10px 15px
      border 1px solid #c2c2c2
      color black
      box-sizing border-box
      display block

      &:focus
        outline 0


div.message
  clearfix()
  margin-bottom: 10px
  div.picture
    float left
    margin-top -7px
    margin-right 15px
    img
      width 30px
      border-radius 50%
      border 2px solid #40CA59