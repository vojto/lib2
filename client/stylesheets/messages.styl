#messages
  width 100%
  bottom 0
  border-top 1px solid #fff

  .list
    padding-left 20px

  .input
    padding 10px 15px
    box-sizing border-box
    input
      background #fff
      width 100%
      padding 10px 15px
      border 1px solid #c2c2c2
      color black
      box-sizing border-box
      display block

      &:focus
        outline 0

  .message.wink
    color #a800ff

  .message.private
    color #3a6ad8