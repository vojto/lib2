@import 'nib'
@import 'colors'

// Layout
// -------------------------------------------------

body
  margin 0
  padding 0

// Homepage
// -------------------------------------------------

.clearfix
  clearfix()

// Basic
// -------------------------------------------------

body
  background #1b1b1c
  color #e6ebf4

  div#navigation
    position fixed
    border-right 1px solid #ccc
    left 0
    top 0
    bottom 0
    width 100px
    box-sizing border-box
    padding-top 20px

    a.nav
      margin auto
      display block
      background-repeat no-repeat
      margin-bottom 10px

      &:not(.avatar)
        text-indent -999px

      &#logo
        size = 53px
        image '/nav_logo.png' size size
        width size+1
        height size+1

      &#messages
        size = 52px
        image '/nav_messages.png' size size
        width size+1
        height size+1

      &#users
        size = 52px
        image '/nav_users.png' size size
        width size+1
        height size+1

      &.avatar
        width 52px
        height 52px
        img
          display block
          width 52px
          height 52px
          border-radius 50%

  #content
    padding 20px
    padding-left 120px

  #header
    height 50px
    margin-bottom 10px
    opacity 0.7
    // padding-top 10px


    #status
      padding-top 17px
      padding-right 20px

    div.picture
      float left
      margin-top -3px
      margin-right 15px
      img
        width 20px

  